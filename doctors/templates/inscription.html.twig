<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Inscription{% endblock %}</title>
        {% block stylesheets %}
        
         <link rel="shortcut icon" type="image/x-icon" href="{{asset('assets/img/icon2.ico')}}">
            <link rel="stylesheet" type="text/css" href="{{asset('assets/css/bootstrap.min.css')}}">
    <link rel="stylesheet" type="text/css" href="{{asset('assets/css/font-awesome.min.css')}}">
    <link rel="stylesheet" type="text/css" href="{{asset('assets/css/style.css')}}">
   
		
	
        
        
        
        {% endblock %}
    </head>
    <body style="background-color:#f9a826">
        {% block body %}
        
        
        
        <div class="main-wrapper  account-wrapper">
        <div class="account-page">
            <div class="account-center">
                <div class="account-box" style="border-radius: 80px 0px 80px ;  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">

{% if app.flashes('successAdd')  %}

   <div class="alert alert-success alert-dismissible fade show" role="alert">
                                    <strong> <span class="fa fa-check"></span> L'utilisateur a été créée.</strong>
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                </div>
 {% else %}
                                {% endif %}




                    <form action="{{path('Addinscription')}}" method="POST" class="form-signin">
                    <h1 style="text-align:center ; color"> Inscription </h1>
						<div class="account-logo">
                            <a href="index-2.html"><img src="assets/img/logo-dark.png" alt=""></a>
                        </div>
                        <div class="form-group">
                            <label>Nom complete</label>
                            <input name="name" type="text" class="form-control">
                        </div>
                         <div class="form-group">
                            <label>Adresse</label>
                            <input name="Adress" type="text" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Email Address</label>
                            <input name="email" type="email" class="form-control" required >
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input name="password" type="password" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label>Numero Telephone</label>
                            <input name="tele" type="number" class="form-control">
                        </div>
                         <div class="form-group">
                            <label>Votre Profil</label>
                            <select name="role"  class="form-control">

                            <option> PARENT </option>
                            <option> PEDIATRE </option>


                            </select>
                        </div>
                        <div class="form-group checkbox">
                            <label>
                                <input type="checkbox"> J'ai lu et j'accepte les termes et conditions 
                            </label>
                        </div>
                        <div class="form-group text-center">
                            <button name="enregistrer" class="btn btn-danger account-btn" type="submit">Enregistrer</button>
                        </div>
                        <div class="text-center login-link">
                            Vous avez déjà un compte? <a href="{{path('app_login')}}">Login</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

        
        
        
        
        
        
        
        
        {% endblock %}
        {% block javascripts %}
        
        	<script src="{{asset('assets/js/html5shiv.min.js')}}"></script>
		<script src="{{asset('assets/js/respond.min.js')}}"></script>
           <script src="{{asset('assets/js/jquery-3.2.1.min.js')}}"></script>
	<script src="{{asset('assets/js/popper.min.js')}}"></script>
    <script src="{{asset('assets/js/bootstrap.min.js')}}"></script>
    <script src="{{asset('assets/js/app.js')}}"></script>
        
        {% endblock %}
    </body>
</html>
                                    <li><a href="#." title="Twitter"><i class="fa fa-twitter"></i></a></li>
                                    <li><a href="#." title="Linkedin"><i class="fa fa-linkedin"></i></a></li>
                                    <li><a href="#." title="Google Plus"><i class="fa fa-google-plus"></i></a></li>
                                    <li><a href="#." title="Youtube"><i class="fa fa-youtube"></i></a></li>
                                </ul>
                            </div>
                        
                            <div class="widget blog-comments clearfix">
                                <h3>Comments ({{countComment}})</h3>
                                <ul class="comments-list">

                                {% for cm in cmnt %}
                                    <li>
                                        <div class="comment">
                                            <div class="comment-author">
                                                <img class="avatar" alt="" src="{{asset('assets/img/utilisateur/' ~ cm.image)}}">
                                            </div>
                                            <div class="comment-block">
                                                <span class="comment-by">
													<span class="blog-author-name">{{cm.nom}}</span>
                                               
                                                </span>
                                                <p>{{cm.cmnt}}</p>
                                                <span class="blog-date">{{cm.dateComment | date('Y-m-d H:i:s')}}</span>
                                            </div>
                                        </div>
                                  </li>

                                  {% endfor %}


                                  </ul>
                            </div>
                            <div class="widget new-comment clearfix">
                                <h3>Laisser un commentaire</h3>
                                <form action="{{path('addCommentair',{'id':blog.id})}}" method="get">
                                    <div class="row">
                                        <div class="col-sm-8">
                                         
                                            <div class="form-group">
                                                <label>Votre addresse email <span class="text-red">*</span></label>
                                                <input name="email" type="email" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label>Votre Commentaire</label>
                                                <textarea name="Comments" rows="4" class="form-control"></textarea>
                                            </div>
                                            <div class="comment-submit">

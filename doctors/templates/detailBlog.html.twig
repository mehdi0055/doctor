                <div class="row">
                    <div class="col-sm-12">
                        <h4 class="page-title">Blog View</h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-8">
                        <div class="blog-view">
                            <article class="blog blog-single-post">
                                <h3 class="blog-title">{{blog.titre}}</h3>
                                <div class="blog-info clearfix">
                                    <div class="post-left">
                                        <ul>
                                            <li><a href="#."><i class="fa fa-calendar"></i> <span>{{blog.dateBlog | date('d/m/y')}}</span></a></li>
                                            <li><a href="#."><i class="fa fa-user-o"></i> <span>By DR : {{pediatre}}</span></a></li>
                                        </ul>
                                    </div>
                                    <div class="post-right"><a href="#."><i class="fa fa-comment-o"></i>{{countComment}} Comment</a></div>
                                </div>
                                <div class="blog-image">
                                    <a href="#."><img alt="" src="{{asset('assets/img/blog/' ~ blog.imageBlog)}}" class="img-fluid"></a>
                                </div>
                                <div class="blog-content">
                                    <p>{{blog.description}}</p>
                             
                                </div>
                            </article>
                            <div class="widget blog-share clearfix">
                                <h3>Share the post</h3>
                                 <div id="fb-root"></div>


  <!-- Your share button code 
  <div class="fb-share-button" 
    data-href="https://www.google.com/" 
    data-layout="button_count">
  </div>-->

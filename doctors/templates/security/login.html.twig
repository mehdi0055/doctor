{% extends 'base.html.twig' %}

{% block title %}Log-in{% endblock %}





{% block body %}




     <div class="main-wrapper account-wrapper" >
        <div class="account-page" >
			<div class="account-center">
				<div class="account-box" style="border-radius: 80px 0px 80px ;  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19); height:500px ;  ">
                    <form  class="form-signin" method="post" >
                     {% if error %}
        <div class="alert alert-danger"> Authentification incorrect</div>
    {% endif %}

    {% if app.User %}
        <div class="mb-3">
            You are logged in as {{ app.User.email }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}


    <div>

  
									<img   src="{{asset('assets/img/lwego.png')}}" style="width: 140px; margin-left:110px" />
                                    </div>
                        <div class="form-group">
                            <label> Email</label>
                            <input value="{{ last_username }}" name="email" id="inputEmail" type="text" autofocus="" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input name="password" id="inputPassword" type="password" class="form-control">
                        </div>
                        
                      
                          <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
                        <div class="form-group text-center">
                            <button  type="submit" class="btn btn-danger account-btn">Login</button>
                        </div>
                        <div class="text-center register-link">
                            Je n'ai pas de compte? <a href="{{path('inscription')}}">S'inscrire maintenant</a>
                        </div>
                    </form>
                </div>
			</div>
        </div>
    </div>
 



{% endblock %}


